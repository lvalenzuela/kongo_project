<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:services)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li><%=link_to t(:services), services_path%></li>
					<li class="active"><%=t(:new_service)%></li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title"><%=t(:new_service)%></h3>
				</div>
				<%=form_for @service do |f|%>
				<div class="panel-body">
                    <%if @service.errors.any?%>
                        <div class="alert alert-warning">
                            <h4><%=pluralize(@service.errors.count,"error")%> <%=t(:submit_error_msg)%></h4>
                            <ul>
                                <%@service.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <%end%>
                            </ul>
                        </div>
                    <%end%>
					<div class="row">
						<div class="col-xs-10 col-xs-offset-1">
							<div class="form-group">
								<label>Nombre</label>
								<%=f.text_field :name, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Descripci√≥n</label>
								<%=f.text_field :description, :class => "form-control"%>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-footer clearfix">
					<%=f.submit "Crear", :class => "btn btn-default pull-right"%>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</div>