<section class="content-header no-margin">
    <h1>
        <%=t(:worker)%>
        <small><%=@worker.firstname+" "+@worker.lastname1%></small>
    </h1>
    <ol class="breadcrumb">
        <li><%=t(:workers_list)%></li>
        <li><%=@worker.firstname+" "+@worker.lastname1%></li>
        <li class="active"><%=t(:new_document)%></li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title"><%=t(:new_document)%></h3>
				</div>
				<%=form_for :worker_document, :url => {:action => :create_document}, :html => {:multipart => true} do |f|%>
				<%=f.hidden_field :worker_id, :value => @worker.id%>
				<div class="box-body">
                    <%if @document.errors.any?%>
                        <div class="callout callout-warning">
                            <h4><%=pluralize(@document.errors.count,"error")%> <%=t(:submit_error_msg)%></h4>
                            <ul>
                                <%@document.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <%end%>
                            </ul>
                        </div>
                    <%end%>
					<div class="row">
						<div class="col-xs-8 col-xs-offset-2">
							<div class="form-group">
								<label><%=t(:category)%></label>
								<%=f.select :file_category_id, options_for_select(@categories.collect{|c| [c.name, c.id]}), {}, {:class => "form-control"}%>
							</div>
							<div class="form-group">
								<label><%=t(:file_name)%></label>
								<%=f.text_field :filename, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label><%=t(:file)%></label>
								<div class="row">
									<div class="col-xs-3">
										<div class="btn btn-primary btn-file" style="display:block;">
											<%=fa_icon "upload"%> <%=t(:upload)%>
											<%=f.file_field :file%>
										</div>
									</div>
									<div class="col-xs-9">
										<%=text_field_tag :file_path, nil, {:disabled => true, :class => "form-control"}%>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="box-footer clearfix">
					<%=submit_tag t(:save), :class => "btn btn-primary pull-right"%>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</section>

<script>
$( "#worker_document_file" ).change(function(){
    var file_path = $("#worker_document_file").val();
    $( "#file_path" ).val(file_path);
});
</script>