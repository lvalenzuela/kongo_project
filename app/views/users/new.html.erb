<section class="content-header no-margin">
    <h1>
        <%=t(:users)%>
        <small><%=t(:new_user)%></small>
    </h1>
    <ol class="breadcrumb">
        <li class="active"><%=t(:new_user)%></li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title">Nuevo Usuario</h3>
				</div>
				<%=form_for @user do |f|%>
				<div class="box-body">
                    <%if @user.errors.any?%>
                        <div class="callout callout-warning">
                            <h4><%=pluralize(@user.errors.count,"error")%> no permitieron llevar a cabo la operacion</h4>
                            <ul>
                                <%@user.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <%end%>
                            </ul>
                        </div>
                    <%end%>
					<div class="row">
						<div class="form-group col-xs-6">
							<label><%=t(:name)%></label>
							<%=f.text_field :firstname, :class => "form-control"%>
						</div>
						<div class="form-group col-xs-6">
							<label><%=t(:lastname)%></label>
							<%=f.text_field :lastname, :class => "form-control"%>
						</div>
						<div class="form-group col-xs-6">
							<label><%=t(:email)%></label>
							<%=f.email_field :email, :class => "form-control"%>
						</div>
						<div class="form-group col-xs-6">
							<label><%=t(:confirm_email)%></label>
							<%=f.email_field :email_confirmation, :class => "form-control"%>
						</div>
						<div class="form-group col-xs-6">
							<label><%=t(:password)%></label>
							<%=f.password_field :password, :class => "form-control"%>
						</div>
						<div class="form-group col-xs-6">
							<label><%=t(:confirm_password)%></label>
							<%=f.password_field :password_confirm, :class => "form-control"%>
						</div>
						<div class="form-group col-xs-6">
							<label><%=t(:idnumber)%></label>
							<%=f.text_field :idnumber, :class => "form-control"%>
						</div>
						<div class="form-group col-xs-6">
							<label><%=t(:role)%></label>
							<%=f.select :role_id, options_for_select(@user_roles.collect{|r| [r.name,r.id]}), {}, {:class => "form-control"}%>
						</div>
						<div class="form-group col-xs-6">
							<label><%=t(:language)%></label>
							<%=f.select :lang, options_for_select([["EspaÃ±ol","es"],["English","en"]], "es"), {}, {:class => "form-control"}%>
						</div>
					</div>
				</div>
				<div class="box-footer clearfix">
					<div class="pull-right">
						<%=f.submit "Crear Usuario", :class => "btn btn-primary btn-lg"%>
					</div>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</section>