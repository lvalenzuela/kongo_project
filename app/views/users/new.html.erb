<section class="content">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title">Nuevo Usuario</h3>
				</div>
				<%=form_for @user do |f|%>
				<div class="box-body">
                    <%if @user.errors.any?%>
                        <div class="callout callout-warning">
                            <h4><%=pluralize(@user.errors.count,"error")%> no permitieron llevar a cabo la operacion</h4>
                            <ul>
                                <%@user.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <%end%>
                            </ul>
                        </div>
                    <%end%>
					<div class="row">
						<div class="col-xs-6">
							<div class="form-group">
								<label>Nombre</label>
								<%=f.text_field :firstname, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Email</label>
								<%=f.email_field :email, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Password</label>
								<%=f.password_field :password, :class => "form-control"%>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="form-group">
								<label>Apellido</label>
								<%=f.text_field :lastname, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Confirmar Email</label>
								<%=f.email_field :email_confirmation, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Confirmar Password</label>
								<%=f.password_field :password_confirm, :class => "form-control"%>
							</div>
						</div>
					</div>
				</div>
				<div class="box-footer clearfix">
					<div class="pull-right">
						<%=f.submit "Crear Usuario", :class => "btn btn-primary btn-lg"%>
					</div>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</section>