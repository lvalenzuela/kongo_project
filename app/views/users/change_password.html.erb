<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:users)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li><%=link_to t(:users), users_path%></li>
					<li><%=link_to @current_user.name, {:controller => :users, :action => :profile}%></li>
					<li class="active"><%=t(:change_password)%></li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title"><%=t(:change_password)%></h3>
				</div>
				<%=form_tag update_password_users_path do%>
				<div class="panel-body">
					<%if flash[:notice]%>
	                    <div class="callout callout-warning">
	                     	<%=flash[:notice]%>  
	                    </div>
	                <%end%>
					<div class="form-group">
						<label><%=t(:old_password)%></label>
						<%=password_field_tag :old_password, nil, :class => "form-control"%>
					</div>
					<div class="form-group">
						<label><%=t(:new_password)%></label>
						<%=password_field_tag :new_password, nil, :class => "form-control"%>
					</div>
					<div class="form-group">
						<label><%=t(:confirm_new_password)%></label>
						<%=password_field_tag :new_password_confirm, nil, :class => "form-control"%>
					</div>
				</div>
				<div class="panel-footer clearfix">
					<%=submit_tag t(:save), :class => "btn btn-default pull-right"%>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</div>