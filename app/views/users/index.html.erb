<section class="content-header no-margin">
    <h1>
        <%=t(:users)%>
        <small><%=t(:users_list)%></small>
    </h1>
    <ol class="breadcrumb">
        <li class="active"><%=t(:users_list)%></li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title"><%=t(:search_user)%></h3>
				</div>
				<%=form_tag do%>
				<div class="box-body">
					<div class="row">
						<div class="col-xs-9 form-group">
							<label><%=t(:name)%></label>
							<%=text_field_tag :user_name, nil, :class => "form-control"%>
						</div>
						<div class="col-xs-3 form-group">
							<label><%=t(:idnumber)%></label>
							<%=text_field_tag :user_idnumber, nil, :min => 0, :class => "form-control"%>
						</div>
					</div>
				</div>
				<div class="box-footer clearfix">
					<div class="pull-right">
						<%=submit_tag "#{t(:search)}", :class => "btn btn-primary "%>
					</div>
				</div>
				<%end%>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title"><%=t(:users_list)%></h3>
					<div class="box-tools">
						<%=link_to t(:new_user), {:action => :new}, {:class => "btn btn-default pull-right"}%>
					</div>
				</div>
				<div class="box-body">
					<table class="table table-striped">
						<thead>
							<tr>
								<th><%=t(:idnumber)%></th>
								<th><%=t(:firstname)%></th>
								<th><%=t(:lastname)%></th>
								<th><%=t(:username)%></th>
								<th><%=t(:role)%></th>

							</tr>
						</thead>
						<tbody>
							<%if @users.blank?%>
							<tr>
								<td colspan="5"><%=t(:no_data)%></td>
							</tr>
							<%else%>
								<%@users.each do |u|%>
								<tr>
									<td><%=link_to u.idnumber, user_path(u.id)%></td>
									<td><%=u.firstname%></td>
									<td><%=u.lastname%></td>
									<td><%=u.username%></td>
									<td><%=user_role(u.role_id)%></td>
								</tr>
								<%end%>
							<%end%>
						</tbody>
					</table>
				</div>
				<div class="box-footer">
				</div>
			</div>
		</div>
	</div>
</section>