<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:trainings)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li class="active"><%=t(:trainings)%></li>
				</ul>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<%=render :partial => "tools_partial"%>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th></th>
						<th><%=t(:name)%></th>
						<th><%=t(:validity_period)%></th>
						<th style="text-align: center;"><%=t(:edit)%></th>
					</tr>
				</thead>
				<tbody>
					<%if @trainings.blank?%>
					<tr>
						<td colspan="4"> No hay datos para mostrar.</td>
					</tr>
					<%else%>
						<%@trainings.each do |t|%>
						<tr>
							<td><%=t.id%></td>
							<td><%=t.name%></td>
							<td><%=t.validity_period%></td>
							<td style="text-align: center;"><%=link_to fa_icon("edit"), training_path(t.id)%></td>
						</tr>
						<%end%>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>
