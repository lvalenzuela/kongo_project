<section class="content-header no-margin">
    <h1>
        Capacitaciones
        <small>Nueva Capacitación</small>
    </h1>
    <ol class="breadcrumb">
        <li><%=link_to "Listado de Capacitaciones", {:action => :index}%></li>
        <li class="active">Nueva Capacitación</li>
    </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="box box-info">
				<div class="box-header">
					<h3 class="box-title">Nueva Capacitación</h3>
				</div>
				<%=form_for @training do |f|%>
				<div class="box-body">
					<div class="row">
						<div class="col-xs-8 form-group">
							<label>Nombre</label>
							<%=f.text_field :name, :class => "form-control"%>
						</div>
						<div class="col-xs-4 form-group">
							<label>Periodo de Validez</label>
							<%=f.number_field :validity_period, :min => 0, :class => "form-control"%>
						</div>
					</div>
				</div>
				<div class="box-footer clearfix">
					<%=f.submit "Crear", :class => "btn btn-primary btn-lg pull-right"%>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</section>