<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:job_profiles)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li><%=link_to t(:job_profiles), job_profiles_path%></li>
					<li class="active"><%=@job_profile.name%></li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title"><%=t(:general_data)%> - <%=@job_profile.name%></h3>
					<div class="brn-group pull-right">
						<%=link_to t(:edit_job_profile), edit_job_profile_path(@job_profile.id), {:class => "btn btn-default btn-sm"}%>
					</div>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-12">
							<table class="table table-striped">
								<tr>
									<th><%=t(:job_profile_name)%></th>
									<td><%=@job_profile.name%></td>
								</tr>
								<tr>
									<th><%=t(:job_profile_description)%></th>
									<td><%=@job_profile.description%></td>
								</tr>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>	
	<div class="row">
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title"><%=t(:associated_trainings)%></h3>
					<div class="btn-group pull-right">
						<%=link_to t(:edit_trainings), {:action => :edit_trainings, :params => {:id => @job_profile.id}}, {:class => "btn btn-default btn-sm"}%>
					</div>
				</div>
				<div class="panel-body">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th><%=t(:training)%></th>
								<th><%=t(:validity_period)%></th>
							</tr>
						</thead>
						<tbody>
							<%if @job_profile_trainings.blank?%>
								<tr>
									<td colspan="2"><%=t(:no_data)%></td>
								</tr>
							<%else%>
								<%@job_profile_trainings.each do |jt|%>
								<tr>
									<td><%=jt.name%></td>
									<td><%=jt.validity_period%></td>
								</tr>
								<%end%>
							<%end%>
						</tbody>
					</table>
				</div>
				<div class="box-footer">
				</div>
			</div>
		</div>
	</div>
</div>