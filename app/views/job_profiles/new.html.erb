<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:job_profiles)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li><%=link_to t(:job_profile), services_path%></li>
					<li class="active"><%=t(:new_profile)%></li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title"><%=t(:new_job_profile)%></h3>
				</div>
				<%=form_for @job_profile do |f|%>
				<div class="panel-body">
                    <%if @job_profile.errors.any?%>
                        <div class="alert alert-warning">
                            <h4><%=pluralize(@job_profile.errors.count,"error")%> <%=t(:submit_error_msg)%></h4>
                            <ul>
                                <%@job_profile.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <%end%>
                            </ul>
                        </div>
                    <%end%>
					<div class="row">
						<div class="col-xs-10 col-xs-offset-1">
							<div class="form-group">
								<label>Nombre</label>
								<%=f.text_field :name, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Descripci√≥n</label>
								<%=f.text_field :description, :class => "form-control"%>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<h4><%=t(:prerequisites)%></h4>
						</div>
						<div class="col-xs-10 col-xs-offset-1">
							<%@trainings.each do |t|%>
							<div class="col-xs-6">
								<div class="form-group">
									<%=check_box_tag "trainings[]", t.id%> <label><%=t.name%></label>
								</div>
							</div>
							<%end%>
						</div>
					</div>
				</div>
				<div class="panel-footer clearfix">
					<%=f.submit "Crear", :class => "btn btn-default pull-right"%>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</div>