<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:contractors)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li><%=link_to t(:contractors), employees_path%></li>
					<li><%=link_to @contractor.commercial_name, contractor_path(@contractor.id)%></li>
					<li class="active"><%=t(:edit_contractor)%></li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title"><%=t(:edit_contractor)%></h3>
				</div>
				<%=form_for @contractor do |f|%>
				<div class="panel-body">
                    <%if @contractor.errors.any?%>
                        <div class="alert alert-warning">
                            <h4><%=pluralize(@contractor.errors.count,"error")%> <%=t(:submit_error_msg)%></h4>
                            <ul>
                                <%@contractor.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <%end%>
                            </ul>
                        </div>
                    <%end%>
					<div class="row">
						<div class="col-xs-10 col-xs-offset-1">
							<div class="form-group">
								<label><%=t(:name) %></label>
								<%=f.text_field :commercial_name, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label><%=t(:business_name)%></label>
								<%=f.text_field :business_name, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label><%=t(:idnumber)%></label>
								<%=f.text_field :rut, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label><%=t(:email)%></label>
								<%=f.email_field :email, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label><%=t(:observations)%></label>
								<%=f.text_field :observations, :class => "form-control"%>
							</div>
						</div>
						<div class="col-xs-5 col-xs-offset-1">
							<div class="form-group">
								<label><%=t(:region)%></label>
								<%=f.select :region, options_for_select([nil]), {}, {:class => "form-control"}%>
							</div>
						</div>
						<div class="col-xs-5">
							<div class="form-group">
								<label><%=t(:commune)%></label>
								<%=f.select :comuna, options_for_select([nil]), {}, {:class => "form-control"}%>
							</div>
						</div>
						<div class="col-xs-10 col-xs-offset-1">
							<div class="form-group">
								<label><%=t(:address)%></label>
								<%=f.text_field :address, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label><%=t(:status)%></label>
								<%=f.select :status_id, options_for_select(@contractor_statuses.collect{|s| [s.name, s.id]}, @contractor.status_id), {}, {:class => "form-control"}%>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-footer clearfix">
					<%=f.submit t(:edit), :class => "btn btn-default pull-right"%>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</div>