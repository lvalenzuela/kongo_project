<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:contractors)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li class="active"><%=t(:contractors)%></li>
				</ul>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<%=render :partial => "tools_partial"%>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>RUT</th>
						<th>Nombre</th>
						<th>Raz√≥n Social</th>
						<th>Email</th>
					</tr>
				</thead>
				<tbody>
					<%if @contractors.blank?%>
					<tr>
						<td colspan="4"> No hay datos para mostrar.</td>
					</tr>
					<%else%>
						<%@contractors.each do |c|%>
						<tr>
							<td><%=link_to c.rut, contractor_path(c.id)%></td>
							<td><%=c.commercial_name%></td>
							<td><%=c.business_name%></td>
							<td><%=c.email%></td>
						</tr>
						<%end%>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>