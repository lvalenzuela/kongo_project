<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:contractors)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li><%=link_to t(:contractors), employees_path%></li>
					<li><%=link_to @contractor.commercial_name, contractor_path(@contractor.id)%></li>
					<li class="active"><%=t(:new_employee)%></li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title"><%=t(:new_employee)%></h3>
					<div class="btn-group pull-right">
						<%=link_to t(:bulk_creation), {:action => :bulk_new_employees, :params => {:id => @contractor.id}}, {:class => "btn btn-default btn-sm pull-right"}%>
					</div>
				</div>
				<%=form_for :worker, :url => {:action => :create_employee} do |f|%>
				<%=f.hidden_field :contractor_id, :value => @contractor.id%>
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-10 col-xs-offset-1">
							<div class="form-group">
								<label>Nombres</label>
								<%=f.text_field :firstname, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Apellido Paterno</label>
								<%=f.text_field :lastname1, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Apellido Materno</label>
								<%=f.text_field :lastname2, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label style="display: block;">GÃ©nero</label>
								<%=f.radio_button :gender, "Masculino"%> Masculino
								<%=f.radio_button :gender, "Femenino"%> Femenino
							</div>
							<div class="form-group">
								<label>Email</label>
								<%=f.email_field :email, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Rut</label>
								<%=f.text_field :rut, :class => "form-control"%>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-footer clearfix">
					<%=f.submit "Crear", :class => "btn btn-default pull-right"%>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</div>