<div class="container">
	<div class="page-header" id="banner">
		<div class="row">
			<div class="col-xs-12">
				<h1 id="nav-tabs"><%=t(:contractors)%></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<ul class="breadcrumb">
					<li><%=link_to t(:home), root_path%></li>
					<li><%=link_to t(:contractors_list), contractors_path%></li>
					<li class="active"><%=t(:new_contractor)%></li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-default">
				<div class="panel-heading clearfix">
					<h3 class="panel-title"><%=t(:new_contractor)%></h3>
				</div>
				<%=form_for @contractor do |f|%>
				<div class="panel-body">
                    <%if @contractor.errors.any?%>
                        <div class="alert alert-warning">
                            <h4><%=pluralize(@contractor.errors.count,"error")%> no permitieron llevar a cabo la operacion</h4>
                            <ul>
                                <%@contractor.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <%end%>
                            </ul>
                        </div>
                    <%end%>
					<div class="row">
						<div class="col-xs-10 col-xs-offset-1">
							<div class="form-group">
								<label>Nombre</label>
								<%=f.text_field :commercial_name, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Razón Social</label>
								<%=f.text_field :business_name, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Rut</label>
								<%=f.text_field :rut, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Email</label>
								<%=f.email_field :email, :class => "form-control"%>
							</div>
							<div class="form-group">
								<label>Observaciones</label>
								<%=f.text_field :observations, :class => "form-control"%>
							</div>
						</div>
						<div class="col-xs-5 col-xs-offset-1">
							<div class="form-group">
								<label>Region</label>
								<%=f.select :region, options_for_select([nil]), {}, {:class => "form-control"}%>
							</div>
						</div>
						<div class="col-xs-5">
							<div class="form-group">
								<label>Comuna</label>
								<%=f.select :comuna, options_for_select([nil]), {}, {:class => "form-control"}%>
							</div>
						</div>
						<div class="col-xs-10 col-xs-offset-1">
							<div class="form-group">
								<label>Dirección</label>
								<%=f.text_field :address, :class => "form-control"%>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-footer clearfix">
					<%=f.submit "Crear", :class => "btn btn-default pull-right"%>
				</div>
				<%end%>
			</div>
		</div>
	</div>
</div>